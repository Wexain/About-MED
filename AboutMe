  <script>
    const text = "Welcome to hrishit's terminal.";
    let i = 0;
    const typing = document.getElementById("typing");

    function typeWriter() {
      if (i < text.length) {
        typing.innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 90);
      }
    }
  

